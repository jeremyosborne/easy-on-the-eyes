        </form>


        <div class="content">{{{content}}}</div>

        {{!-- Any data the server wants to provide to us. Server promises at minimum empty object. --}}
        <script>
var bootstrap = {{{toJSON bootstrap}}};
        </script>

        <script src="/app.js"></script>

